@using Core.Domain.Entities.Admin
@model Admin;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Giriş</h3></div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Email" />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="PasswordHash" />
                            <label asp-for="PasswordHash"></label>
                            <span asp-validation-for="PasswordHash"></span>
                        </div>
                        <div class="float-end">
                            <a asp-action="VerifyEmail" asp-controller="Account" class="text-decoration-none">Forgot password?</a>
                        </div>
                       @*  <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(a=>a.RememberMe)
                        </div> *@
                        <div class="d-flex flex-column align-items-center justify-content-center mt-4 mb-0">
                            <input type="submit" value="Login" class="btn btn-success w-75 mx-2"/>
                            <a asp-controller="Account" asp-action="Register" class="mt-2">Need an account? Sign up!</a>
                            <a asp-controller="Home" asp-action="Index" class="mt-3">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
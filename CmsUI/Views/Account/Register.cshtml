@using CmsUI.ViewModels
@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Name" />
                            <label asp-for="Name"></label>
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Email" />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Password" />
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="ConfirmPassword" />
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="d-flex flex-column align-items-center justify-content-center mt-4 mb-0">
                            <input type="submit" value="Create account" class="btn btn-success w-75 mx-2" />
                            <a asp-controller="Account" asp-action="Login" class="mt-2">Have an account? Go to login</a>
                            <a asp-controller="Home" asp-action="Index" class="mt-3">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}